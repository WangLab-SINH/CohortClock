<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.xuexiang.xui.widget.tabbar.TabControlView
                android:id="@+id/tcv_select2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tcv_defaultSelection="0"/>
            <TextView
                style="@style/TextStyle.Content"
                android:text="Please enter your ageï¼š" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:hint="Please enter your age"
                    app:met_clearButton="true"
                    app:met_maxCharacters="25" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    android:id="@+id/button_no"
                    style="@style/SuperButton.Blue"
                    android:layout_marginRight="50dp"

                    android:text="Cancel" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    android:id="@+id/button_yes"
                    style="@style/SuperButton.Blue"


                    android:text="Save" />




            </LinearLayout>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>