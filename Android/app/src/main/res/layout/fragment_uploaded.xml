<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
            android:id="@+id/imgViewall"
            android:layout_width="259dp"
            android:layout_height="242dp"
            android:layout_margin="16dp"
            android:background="@drawable/a1_final_cohort"
            app:sb_shape_type="round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="点开查看您的饮食推荐"
            android:textSize="25sp" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>