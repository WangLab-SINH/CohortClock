<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pathselect_title"
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <TextView
            android:id="@+id/main_title_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="96.0dip"
            android:paddingRight="96.0dip"
            android:singleLine="true"
            android:text="Feedback" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_weight="1"

        android:fillViewport="true">

        <EditText
            android:id="@+id/fee_back_edit"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@null"
            android:gravity="left|top"
            android:hint="Write something..."
            android:inputType="textMultiLine"
            android:paddingLeft="4.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="4.0dip"
            android:textSize="16.0sp" />

    </ScrollView>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:tint="?attr/colorAccent"
            app:srcCompat="@drawable/ic_phone" />

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:hint="Please write your email"
 />

    </FrameLayout>
 />

    <Button
        android:id="@+id/feed_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="35.0dip"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="5.0dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:text="Submit" />

</LinearLayout>
